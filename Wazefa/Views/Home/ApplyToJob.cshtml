@model JobsForYou.Models.ApplyJobs


<div class="container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm(new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>ApplyJobs</h4>
                    <div>
                        @{if (ViewBag.Error != null)
                        {<div class="alert alert-success">@ViewBag.Error</div>}}
                    </div>
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.Label("Message", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextArea("Message", new { @class = "form-control" })
                            @Html.ValidationMessage("Message")
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="You Sure To Apply" class="btn btn-default" /> Or
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
