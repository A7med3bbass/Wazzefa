@model JobsForYou.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_FirstLayOut.cshtml";
}

<div class="container">
    <div class="row">
        <h2>Edit</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Category</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.CatNo)

                <div class="form-group">
                    @Html.LabelFor(model => model.CatName, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CatName)
                        @Html.ValidationMessageFor(model => model.CatName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CatDesc, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CatDesc)
                        @Html.ValidationMessageFor(model => model.CatDesc)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
